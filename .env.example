# === Core IDs / Auth ===
# Telegram ID администратора (число). В .env.example НЕ указываем личный реальный ID.
ADMIN_USER_ID=YOUR_ADMIN_TELEGRAM_ID
TELEGRAM_BOT_TOKEN=REPLACE_ME
TELEGRAM_WEBAPP_URL=http://localhost:5173

# === Mode ===
MODE=VIRTUAL

# === Raffle Parameters ===
DEFAULT_THRESHOLD=1000
MIN_THRESHOLD=100
GRACE_PERIOD_SECONDS=30
FORCE_START_AFTER_HOURS=24
WINNER_SHARE_PERCENT=70
COMMISSION_PERCENT=30
CURRENCY_SYMBOL=⭐

# === Behavior Flags ===
ENABLE_AUTO_CREATE_NEXT=1

# === Fairness ===
FAIRNESS_HASH_ALGO=sha256
FAIRNESS_HMAC_ALGO=sha256

# === Infra ===
API_PORT=3000
LOG_LEVEL=info
WEBAPP_ALLOWED_ORIGINS=http://localhost:5173

# === Supabase ===
# Реальные ключи НЕ класть сюда. Заполняем только в приватном .env
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=YOUR_PUBLIC_ANON_KEY
# SUPABASE_SERVICE_ROLE_KEY=  # не указываем здесь (только в .env)
